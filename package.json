    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "typechain": "^1.0.3",
    "typechain-target-web3-v1": "^1.0.1"
