    "web3-eth-contract": "^1.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-contracts": "git submodule update --init && cd posdao-contracts && npm ci && npm run compile",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "make-abis": "node_modules/.bin/typechain --target web3-v1 --outDir src/abis/ 'posdao-contracts/build/contracts/**/*.json'"
